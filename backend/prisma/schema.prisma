generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               String    @id @default(uuid())
  email            String    @unique
  password         String
  firstName        String
  lastName         String
  phone            String?
  role             Role      @default(CUSTOMER)
  isActive         Boolean   @default(true)
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
  driverLicenseUrl String?
  isKycVerified    Boolean   @default(false)
  kycSubmittedAt   DateTime?
  kycVerifiedAt    DateTime?
  liveProfileUrl   String?
  nationalIdUrl    String?
  bookings         Booking[]
  carts            Cart[]
  reviews          Review[]
}

model Vehicle {
  id           String        @id @default(uuid())
  make         String
  model        String
  category     String
  transmission Transmission
  fuelType     FuelType
  pricePerDay  Float
  color        String
  mileage      Int
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  isAvailable  Boolean       @default(true)
  address      String
  city         String
  name         String        @unique
  postalCode   String
  total        Int
  images       String
  bookingItems BookingItem[]
  cartItems    CartItem[]
  reviews      Review[]
}

model Cart {
  id        String     @id @default(uuid())
  userId    String
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  user      User       @relation(fields: [userId], references: [id])
  cartItems CartItem[]
}

model CartItem {
  id        String   @id @default(uuid())
  cartId    String
  vehicleId String
  createdAt DateTime @default(now())
  cart      Cart     @relation(fields: [cartId], references: [id])
  vehicle   Vehicle  @relation(fields: [vehicleId], references: [id])
}

model Booking {
  id           String        @id @default(uuid())
  totalPrice   Float
  lateFee      Float         @default(0)
  status       BookingStatus @default(PENDING)
  userId       String?
  confirmedAt  DateTime?
  completedAt  DateTime?
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  guestEmail   String?
  guestName    String?
  guestPhone   String?
  
  user         User?         @relation(fields: [userId], references: [id])
  bookingItems BookingItem[]
}

model BookingItem {
  id        String   @id @default(uuid())
  bookingId String
  vehicleId String
  startDate DateTime
  endDate   DateTime
  price     Float
  createdAt DateTime @default(now())
  booking   Booking  @relation(fields: [bookingId], references: [id])
  vehicle   Vehicle  @relation(fields: [vehicleId], references: [id])
}

model Review {
  id        String   @id @default(uuid())
  rating    Int
  comment   String?
  userId    String
  vehicleId String
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
  vehicle   Vehicle  @relation(fields: [vehicleId], references: [id])
}

model PasswordReset {
  id        Int      @id @default(autoincrement())
  email     String
  code      Int      @unique
  expiresAt DateTime
  used      Boolean  @default(false)
  createdAt DateTime @default(now())

  @@map("password_resets")
}

model ContactMessage {
  id        String   @id @default(uuid())
  firstName String
  lastName  String
  email     String
  phone     String?
  subject   String
  message   String
  status    String   @default("unread")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("contact_messages")
}

enum Role {
  ADMIN
  AGENT
  CUSTOMER
}

enum Transmission {
  MANUAL
  AUTOMATIC
}

enum FuelType {
  GASOLINE
  DIESEL
  ELECTRIC
  HYBRID
}

enum BookingStatus {
  PENDING
  CONFIRMED
  CANCELLED
  COMPLETED
  REJECTED
}
